@import '../../assest/common-mod.wxss';
.m-card {
  background: #fff;
  box-shadow: 0 2px 8px 0 rgb(0 0 0 / 14%);
  box-sizing: border-box;
  cursor: pointer;
  display: inline-block;
  width: auto;
  margin: 30rpx 30rpx 0;
  border-radius: 8rpx;
}
.title-wrap {
  background: #f7f7fa;
  height: 90rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 8rpx 8rpx 0rpx 0rpx;
}
.title-icon {
  width: 52rpx;
  height: 52rpx;
  margin-right: 8rpx;
}
.title-text {
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}
.content-wrap {
  position: relative;
  padding: 30rpx 16rpx;
  display: flex;
  padding-bottom: 50rpx;
  height: 352rpx;
  box-sizing: border-box;
}
.bg {
  position: absolute;
  width: 156rpx;
  height: 102rpx;
  bottom: 10rpx;
  right: 10rpx;
}
.list {
  position: relative;
  flex: 1;
  display: flex;
  align-items: center;
  flex-direction: column;
}
.l-item {
  flex: 1;
  text-align: center;
}
.l-item-title {
  color: #666666;
  font-size: 28rpx;
  font-weight: bold;
}
.l-item-value {
  margin-top: 8rpx;
}
.l-item-value .num {
  color: #265cf0;
  font-weight: bold;
  margin-right: 6rpx;
}
.compare {
  position: relative;
  padding: 24rpx 0rpx;
  width: 40rpx;
  height: 40rpx;
}

/* 查看更多 */
.view-more {
  position: relative;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}
.view-more-text {
  color: #265cf0;
  font-size: 28rpx;
}